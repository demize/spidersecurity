{
	"manifest_version": 2,
	"name": "spidersecurity",
	"version": "1.0",
	"description": "Makes everything cyber now spiders.",
	"permissions": [
		"storage"
	],
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	],
	"icons":
	{
		"256": "logo.png",
		"scalable": "logo.svg"
	},
	"background": {
    	"scripts": ["background.js"],
    	"persistent": false
  	},
	"browser_action": {
    	"default_icon": "logo.png"
  	}
}

